@{
}

@model List<StudentManager.Models.Entities.Student>

<h1>Students List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Subscribed</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => student.Name)</td>
                <td>@Html.DisplayFor(modelItem => student.Email)</td>
                <td>@Html.DisplayFor(modelItem => student.Phone)</td>
                <td>@Html.DisplayFor(modelItem => student.Subscribed)</td>
                @if (User.Identity!.IsAuthenticated) //équivalent de @if(User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <td>
                        <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                        <a class="btn btn-danger" asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@if (User.Identity!.IsAuthenticated)
{
    <a asp-action="Add" class="btn btn-primary">Create New</a>
}